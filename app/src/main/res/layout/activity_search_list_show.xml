<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mb.mmdepartment.activities.SearchListActivity">
    <include layout="@layout/toolbar"></include>
    <com.mb.mmdepartment.view.RefreshListView
        android:id="@+id/main_search_list"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:dividerHeight="1dp"
        android:divider="#20939393"
        android:layout_height="match_parent"
        />
    <ImageView
        android:id="@+id/go_to_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/go_top"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:visibility="gone"
        />
</RelativeLayout>
