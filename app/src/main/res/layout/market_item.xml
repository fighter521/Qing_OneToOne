<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/five_dip"
    android:paddingBottom="@dimen/five_dip"
    >
   <TextView
       android:layout_width="match_parent"
       android:background="#f00"
       android:layout_height="1dp"
       />

   <LinearLayout
       android:id="@+id/content"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:paddingLeft="5dp"
       android:layout_marginLeft="@dimen/ten_dip"
       android:gravity="center_vertical"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/iv_market_sel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/market_unsel"
           android:layout_gravity="center_vertical"
           />
       <ImageView
           android:id="@+id/iv_market_icon"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginTop="@dimen/two_dip"
           android:layout_marginBottom="@dimen/two_dip"
           android:layout_marginLeft="@dimen/five_dip"
           android:scaleType="centerInside"
           />
       <TextView
           android:layout_width="match_parent"
           android:id="@+id/tv_market_left"
           android:text="a"
           android:layout_weight="1"
           android:textColor="#000"
           android:padding="10dp"
           android:lines="1"
           android:ellipsize="end"
           android:textSize="@dimen/sixteen_sp"
           android:gravity="center_vertical"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#f00"
        android:layout_height="1dp"
        />
</LinearLayout>