<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.mb.mmdepartment.overridge.MyScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/two_dip"
        android:scrollbars="none"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_function_recyc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dip"
                android:padding="1dp"
                android:id="@+id/main_fragment_bar"
                android:background="@drawable/cicle_back_catlog_sel"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/main_new_brand_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="品牌新品"
                    android:drawablePadding="@dimen/five_dip"
                    android:drawableTop="@mipmap/pinpai_activity"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_half_red"
                    />
                <TextView
                    android:id="@+id/main_release_brand_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="品牌发布"
                    android:drawableTop="@mipmap/pinpai_release"
                    android:drawablePadding="@dimen/five_dip"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_half_red"
                    />
                <TextView
                    android:id="@+id/main_story_brand_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/pinpai_story"
                    android:text="品牌故事"
                    android:drawablePadding="@dimen/five_dip"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--<FrameLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/two_dip"
                android:layout_height="wrap_content">

            </FrameLayout>

            <com.mb.mmdepartment.view.MyListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_listview"></com.mb.mmdepartment.view.MyListView>
                -->
        </LinearLayout>
    </com.mb.mmdepartment.overridge.MyScrollView>
</FrameLayout>