<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yieryi.gladtohear.activities.LoginActivity">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/login_ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/cicle_back_login"
            android:hint="请输入手机号"
            android:padding="10dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/text_half_black_color"
            android:textColorHint="@color/text_little_black_color" />

        <EditText
            android:id="@+id/login_ed_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cicle_back_login"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/text_half_black_color"
            android:textColorHint="@color/text_little_black_color" />

        <TextView
            android:id="@+id/login_tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cicle_back_login_tv"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/color_white"
            android:text="登录" />
        <CheckBox
            android:id="@+id/add_to_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:layout_marginLeft="10dp"
            android:textColor="@color/theme_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_tv_forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="忘记密码 ?"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sixteen_dip" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/theme_color" />

            <TextView
                android:id="@+id/login_tv_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="注册账户"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/sixteen_dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/color_gray" />

            <TextView
                android:id="@+id/login_tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/login_tv_qq"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/weixin"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/color_gray" />

            <TextView
                android:id="@+id/login_tv_sina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/login_tv_weixin"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/sina"
                android:gravity="center"
                android:text="新浪"
                android:textColor="@color/color_gray" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>