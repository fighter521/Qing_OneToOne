<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mb.mmdepartment.activities.ForgetPasswordPageActivity">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_gray"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:inputType="number"
            android:hint="请输入手机号"
            android:id="@+id/forget_psw_phone_ev" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:inputType="number"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:background="@color/color_white"
            android:id="@+id/forget_psw_get_ver_ev"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:id="@+id/forget_psw_get_verification_code"
            android:text="获取验证码"
            android:background="@color/theme_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:background="@color/theme_color"
            android:text="确定"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:id="@+id/forget_psw_confirm"
            />
    </LinearLayout>

</LinearLayout>
