<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.gladtohear.view.CatlogsSelActivity">
    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/cicle_back_catlog_sel"
        >
        <TextView
            android:id="@+id/catlog_sel_food_drink_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="食品饮料"
            android:background="@color/text_little_half_red"
            />
        <TextView
            android:layout_width="0.5dp"
            android:background="@color/text_half_red"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/catlog_sel_mom_baby_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/text_half_red"
            android:text="母婴亲子"
            />
        <TextView
            android:layout_width="0.5dp"
            android:background="@color/text_half_red"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/catlog_sel_family_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:textColor="@color/text_half_red"
            android:gravity="center"
            android:layout_weight="1"
            android:text="日用家化"
            />
        <TextView
            android:layout_width="0.5dp"
            android:background="@color/text_half_red"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/catlog_sel_cosmetic_skin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:textColor="@color/text_half_red"
            android:gravity="center"
            android:layout_weight="1"
            android:text="护肤彩妆"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
       <android.support.v7.widget.RecyclerView
            android:layout_width="95dp"
            android:id="@+id/catlog_sel_recycle"
            android:layout_height="match_parent"
            />
        <com.mb.mmdepartment.overridge.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/catlog_sel_sc_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                >

            </LinearLayout>
        </com.mb.mmdepartment.overridge.MyScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/bottpm_bar"
        android:background="#2000"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超市优先"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="@dimen/ten_dip"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/text_half_red"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/catlog_sel_buy_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/catlog_sel_buy"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品类优先"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/text_half_red"
            android:gravity="center"
            android:padding="@dimen/ten_dip"
            />
    </LinearLayout>
</LinearLayout>
