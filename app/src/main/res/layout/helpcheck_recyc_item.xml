<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/five_dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/help_check_market_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/sina"
        android:background="@drawable/cicle_back_market"
        android:scaleType="centerInside"
        android:padding="1dp"
        android:layout_marginRight="@dimen/five_dip"
        />
    <TextView
        android:id="@+id/help_check_market_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="@dimen/five_dip"
        android:text="大润发超市"
        android:background="@drawable/cicle_back_market"
        />
</LinearLayout>