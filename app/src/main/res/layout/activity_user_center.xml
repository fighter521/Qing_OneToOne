<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ditu_right"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/topLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@mipmap/shangbiankuang"
            android:orientation="horizontal" />
        <RelativeLayout
            android:id="@+id/iv_top"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dip" >

            <com.mb.mmdepartment.view.CircleImageView
                android:id="@+id/headImageView"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@mipmap/iv_hearder_default" />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:background="@mipmap/youbianliebiao"
                android:id="@+id/user_pic_in_main" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/ten_dip"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#20939393"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/user_center_login_username"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="登陆"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/user_center_tv_back"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/eighteen_sp"
                android:textColor="@color/color_white"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/user_center_regist_score"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="注册"
                android:background="@drawable/user_center_tv_back"
                android:lines="1"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:ellipsize="end"
                android:textSize="@dimen/eighteen_sp"
                android:textColor="@color/color_white"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#20939393"
            ></TextView>
        <LinearLayout
            android:id="@+id/jifen"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/user_center_tv_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我 的 积 分"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_white"
                android:padding="10dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/ten_dip"
                android:drawableLeft="@mipmap/icon_my_jifen"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#20939393"
            ></TextView>
        <LinearLayout
            android:id="@+id/pinglun"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/user_center_tv_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我 的 评 论"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_white"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/ten_dip"
                android:drawableLeft="@mipmap/icon_mychat"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#20939393"
            ></TextView>
        <LinearLayout
            android:id="@+id/my_account"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/user_center_tv_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我 的 账 号"
                android:textSize="18sp"
                android:textColor="@color/color_white"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/ten_dip"
                android:drawableLeft="@mipmap/icon_my_account"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#20939393"
            ></TextView>
        <LinearLayout
            android:id="@+id/setting_center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/user_center_tv_back"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设 置 中 心"
                android:textColor="@color/color_white"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:drawablePadding="@dimen/ten_dip"
                android:drawableLeft="@mipmap/icon_my_setting"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#20939393"
            ></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.5.5"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/ten_dip"/>
</FrameLayout>
