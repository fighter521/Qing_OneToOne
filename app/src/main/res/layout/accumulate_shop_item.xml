<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/accumulate_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/five_dip"
    android:layout_margin="@dimen/five_dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/accumulate_item_shopping_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/accumulate_item_shopping_introduce_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingLeft="@dimen/five_dip"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/ten_dip"
            android:textSize="@dimen/twelve_sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/five_dip"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/ten_dip"
            >
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="兑换："
                android:textSize="@dimen/twelve_sp" />
            <TextView
                android:id="@+id/accumulate_item_shopping_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/two_dip"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>