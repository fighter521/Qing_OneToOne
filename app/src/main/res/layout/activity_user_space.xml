<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yieryi.gladtohear.activities.UserSpaceActivity">
    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="1dp"
        android:background="@drawable/cicle_back_catlog_sel"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_space_list_record_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:layout_weight="1"
            android:textColor="@color/text_half_red"
            android:gravity="center"
            android:text="清单记录"
            />
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_half_red"
            />
        <TextView
            android:id="@+id/user_space_exchange_prizes_record_tv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_half_red"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:text="兑换记录"
            />
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_half_red"
            />
        <TextView
            android:id="@+id/user_space_prizes_exchange_tv"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:textColor="@color/text_half_red"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/ten_dip"
            android:text="中奖兑换"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/user_space_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
