<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="#303069"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="10dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/ten_dip"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shopping_market_iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/market_unsel"
            />
        <ImageView
            android:layout_width="60dp"
            android:src="@mipmap/test"
            android:layout_marginLeft="@dimen/ten_dip"
            android:layout_height="60dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ten_dip"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/market_content_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_half_black_color"
                android:text="洗发水半价"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/market_content_item_active_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_half_black_color"
                android:layout_weight="1"
                android:text="买一送一"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/market_content_item_new_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="212"
                    android:textColor="@color/text_half_black_color"
                    />
                <TextView
                    android:id="@+id/market_content_item_old_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="212"
                    android:textColor="@color/text_little_black_color"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/shopping_sheng_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/text_half_black_color"
            android:padding="@dimen/ten_dip"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2件"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:textColor="#a000"
            android:drawableBottom="@mipmap/change_market"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>