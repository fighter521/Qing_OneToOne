<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listrecord_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/two_dip"
    android:layout_margin="@dimen/ten_dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/ten_dip"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/listrecord_list_tv"
            android:layout_width="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/listrecord_number_tv"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="201509238669"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/listrecord_time_tv"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="2015-09-23 14:17:56"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/listrecord_money_tv"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text="281.40"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>