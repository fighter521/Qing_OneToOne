<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/two_dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/goods_iv"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/eighty_dip"
        android:layout_height="@dimen/eighty_dip" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/goods_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dip"
            android:textSize="@dimen/sixteen_sp"
            android:text="欧莱雅全面保湿界面乳液,日夜保湿霜"
            android:ellipsize="end"
            android:lines="1"
            />
        <TextView
            android:id="@+id/goods_des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dip"
            android:textSize="@dimen/fourteen_sp"
            android:text="部分商品买一送一"
            android:ellipsize="end"
            android:lines="1"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/goods_new_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="¥ 200"
                    android:textColor="@color/text_half_red"
                    />
                <TextView
                    android:id="@+id/goods_old_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="¥ 200"
                    android:textColor="@color/text_half_red"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/goods_cankao_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="参考价"
                    android:drawableLeft="@mipmap/one_shop"
                    android:textColor="@color/text_half_red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="¥ 200"
                    android:textColor="@color/text_half_red"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>