<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"></include>
    <EditText
        android:id="@+id/regist_username_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dip"
        android:hint="输入用户名"
        android:layout_margin="@dimen/ten_dip"
        android:background="@drawable/cicle_back_login"
        />
    <EditText
        android:id="@+id/regist_password_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dip"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:layout_margin="@dimen/ten_dip"
        android:background="@drawable/cicle_back_login"
        />
    <EditText
        android:id="@+id/regist_again_password_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dip"
        android:hint="请重复密码"
        android:inputType="textPassword"
        android:layout_margin="@dimen/ten_dip"
        android:background="@drawable/cicle_back_login"
        />
    <EditText
        android:id="@+id/regist_photo_number_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:padding="@dimen/ten_dip"
        android:hint="输入手机号"
        android:layout_margin="@dimen/ten_dip"
        android:background="@drawable/cicle_back_login"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/ten_dip"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/regist_code_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="phone"
            android:padding="@dimen/ten_dip"
            android:layout_margin="@dimen/ten_dip"
            android:hint="请输入验证码"
            android:background="@drawable/cicle_back_login"
            />
        <TextView
            android:id="@+id/regist_getcode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ten_dip"
            android:text="获取验证码"
            android:textColor="@color/color_white"
            android:background="@drawable/cicle_back_login_tv"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/regist_regist_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dip"
        android:text="注册"
        android:gravity="center"
        android:layout_margin="@dimen/ten_dip"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/ten_dip"
        android:background="@color/theme_color"
        />
</LinearLayout>