<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/five_dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/five_dip"
        android:orientation="horizontal"
        >
        <com.mb.mmdepartment.view.CircleImageView
            android:id="@+id/information_detail_item_comment_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/guide_for"
            app:border_color="@color/theme_color"
            android:layout_gravity="top"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/five_dip"
            >
            <TextView
                android:id="@+id/information_detail_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/five_dip"
                android:textColor="@color/color_black"
                android:text="哈哈哈"
                android:layout_marginTop="@dimen/five_dip"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/information_detail_item_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/five_dip"
                android:text="如果希望浏览的网页后退而不是退出浏览器，需要WebView覆盖URL加载，让它自动生成历史访问记录，那样就可以通过前进或后退访问已访问过的站点。"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                >
                <ImageView
                    android:id="@+id/information_detail_item_cai_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_cai"
                    />
                <TextView
                    android:id="@+id/information_detail_item_cai_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1256"
                    android:layout_marginLeft="@dimen/five_dip"
                    android:layout_toRightOf="@+id/information_detail_item_cai_iv"
                    />
                <ImageView
                    android:layout_toRightOf="@+id/information_detail_item_cai_count_tv"
                    android:id="@+id/information_detail_item_zan_iv"
                    android:layout_width="20dp"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_zan"
                    />
                <TextView
                    android:id="@+id/information_detail_zan_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="10000"
                    android:layout_marginLeft="@dimen/five_dip"
                    android:layout_marginRight="@dimen/ten_dip"
                    android:layout_toRightOf="@+id/information_detail_item_zan_iv"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>