<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.yieryi.gladtohear.activities.AccumulateShopDetailActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <include layout="@layout/toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/accumulate_detail_iv"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
            <TextView
                android:id="@+id/accumulate_detail_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten_dip"
                android:textSize="@dimen/fourteen_sp"
                android:textColor="@color/theme_color"
                />
            <TextView
                android:id="@+id/accumulate_detail_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ten_dip"
                android:textSize="@dimen/twelve_sp"
                android:text="活动时间："
                android:textColor="@color/color_black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/ten_dip"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分："
                    android:textColor="@color/color_black"
                    />
                <TextView
                    android:id="@+id/accumulate_detail_accumulate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:layout_weight="1"
                    android:textColor="@color/theme_color"
                    />
                <TextView
                    android:id="@+id/accumulate_detail_exchange_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换"
                    android:textColor="@color/color_white"
                    android:background="@drawable/cicle_back"
                    android:paddingTop="@dimen/ten_dip"
                    android:paddingBottom="@dimen/ten_dip"
                    android:paddingLeft="@dimen/twenty_dip"
                    android:paddingRight="@dimen/twenty_dip"
                    />
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/five_dip"
                android:layout_margin="@dimen/five_dip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five_dip"
                        android:text="商品介绍"
                        android:textColor="@color/color_black"
                        />
                    <TextView
                        android:id="@+id/accumulate_detail_description_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five_dip"
                        android:textColor="@color/color_black"
                        android:text="碧海蓝天，这是一个永恒的主题，因为你就来自于此，在海的怀抱里，你能从每一抹蓝里找到任何颜色，它是冷的？但它每天拥抱着太阳。它是暖的？但它永远藏着揭不开的谜底。
尺寸 : 链长38+6.3，坠2.4x2.4cm                                                                                                         材质 :施华洛世奇元素水晶 、合金
尺寸 : 直径5cm，延长链5.5cm，蝴蝶长2.4cm                                                                                            材质 :施华洛世奇元素水晶、合金"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/five_dip"
                android:layout_margin="@dimen/five_dip"
                android:layout_marginTop="@dimen/five_dip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:text="活动规则"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five_dip"
                        android:textColor="@color/color_black"
                        />
                    <TextView
                        android:id="@+id/accumulate_detail_activity_rool_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five_dip"
                        android:textColor="@color/color_black"
                        android:text="本产品仅需积分兑换。数量有限，先到先得。兑换礼品由仓库统一发货，每月配送三次，请耐心等候。"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/five_dip"
                android:layout_margin="@dimen/five_dip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five_dip"
                        android:text="兑换说明"
                        android:textColor="@color/color_black"
                        />
                    <TextView
                        android:id="@+id/accumulate_detail_change_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/five_dip"
                        android:textColor="@color/color_black"
                        android:text="本产品仅需积分兑换。数量有限，先到先得。兑换礼品由仓库统一发货，每月配送三次，请耐心等候。"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/five_dip"
                android:layout_margin="@dimen/five_dip"
                >
                <WebView
                    android:id="@+id/accumulate_detail_content_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>