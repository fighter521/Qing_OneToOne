<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/theme_color"
    android:minHeight="?attr/actionBarSize"
    style="@style/AppTheme"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/main_local_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="上海市"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:drawableRight="@mipmap/localtion"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:hint="输入商品、超市名称"
            android:drawablePadding="5dp"
            android:textColorHint="@color/color_white"
            android:background="@drawable/cicle_back_search"
            android:drawableLeft="@drawable/abc_ic_search_api_mtrl_alpha"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/user_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/person"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</android.support.v7.widget.Toolbar>