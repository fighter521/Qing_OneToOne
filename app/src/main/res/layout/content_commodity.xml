<?xml version="1.0" encoding="utf-8"?>
<com.mb.mmdepartment.fab.widget.RevealFrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.administrator.gladtohear.view.CatlogsSelActivity">
        <include layout="@layout/toolbar"></include>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/contenner_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:background="@drawable/cicle_back_catlog_sel"
                    >
                    <TextView
                        android:id="@+id/catlog_sel_food_drink_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/ten_dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:text="食品饮料"
                        android:background="@color/text_little_half_red"
                        />
                    <TextView
                        android:layout_width="0.5dp"
                        android:background="@color/text_half_red"
                        android:layout_height="match_parent"></TextView>
                    <TextView
                        android:id="@+id/catlog_sel_mom_baby_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/ten_dip"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/text_half_red"
                        android:text="母婴亲子"
                        />
                    <TextView
                        android:layout_width="0.5dp"
                        android:background="@color/text_half_red"
                        android:layout_height="match_parent"></TextView>
                    <TextView
                        android:id="@+id/catlog_sel_family_home_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/ten_dip"
                        android:textColor="@color/text_half_red"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="日用家化"
                        />
                    <TextView
                        android:layout_width="0.5dp"
                        android:background="@color/text_half_red"
                        android:layout_height="match_parent"></TextView>
                    <TextView
                        android:id="@+id/catlog_sel_cosmetic_skin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/ten_dip"
                        android:textColor="@color/text_half_red"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="护肤彩妆"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ListView
                        android:layout_width="90dp"
                        android:scrollbars="none"
                        android:divider="#20939393"
                        android:dividerHeight="0.5dp"
                        android:id="@+id/catlog_sel_recycle"
                        android:layout_height="match_parent"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#20939393"
                        ></View>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/goods_sel_recycle"
                        android:background="@color/color_white"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/no_data_tv"
                    android:text="抱歉此超市暂时没有此类数据"
                    android:gravity="center"
                    android:textSize="@dimen/sixteen_sp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#20939393"
                    ></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="超市优先"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:background="@color/transparent_theme_color"
                    android:padding="@dimen/ten_dip"
                    android:textSize="@dimen/sixteen_sp"
                    android:textColor="@color/color_white"
                    android:layout_weight="1"
                    android:id="@+id/buy_plan_by_supermarket_tv"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#20939393"
                    ></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="品类优先"
                    android:background="@color/transparent_theme_color"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:textSize="@dimen/sixteen_sp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:padding="@dimen/ten_dip"
                    android:id="@+id/buy_plan_brand_tv"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/goods_sel_liner_parent"
        >
        <LinearLayout
            android:id="@+id/goods_sel_liner"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/color_white"
            android:layout_marginBottom="38dp"
            android:layout_height="200dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="@dimen/ten_dip"
                android:background="@color/transparent_gray"
                android:text="长按取消选择/取消"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/goods_selected_recycle"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/floatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/catlog_sel_buy"/>

    </RelativeLayout>
</com.mb.mmdepartment.fab.widget.RevealFrameLayout>